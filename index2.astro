      }

      /* CRT Screen Effect */
      .crt-screen {
        position: relative;
        background: rgba(0, 20, 0, 0.9);
        border: 2px solid var(--matrix-green);
        border-radius: 10px;
        padding: 2rem;
        box-shadow: 
          0 0 50px rgba(0, 255, 65, 0.3),
          inset 0 0 30px rgba(0, 255, 65, 0.1);
      }

      /* CRT Scanline Animation */
      .crt-screen::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 3px;
        background: linear-gradient(
          to bottom,
          rgba(0, 255, 65, 0) 0%,
          rgba(0, 255, 65, 0.8) 50%,
          rgba(0, 255, 65, 0) 100%
        );
        animation: scanline 3s linear infinite;
        pointer-events: none;
        z-index: 100;
      }

      @keyframes scanline {
        0% {
          top: 0%;
        }
        100% {
          top: 100%;
        }
      }

      /* CRT Flicker Effect */
      .crt-screen::after {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 255, 65, 0.03);
        animation: flicker 0.15s infinite;
        pointer-events: none;
      }

      @keyframes flicker {
        0% {
          opacity: 0.9;
        }
        50% {
          opacity: 1;
        }
        100% {
          opacity: 0.92;
        }
