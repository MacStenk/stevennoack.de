    <style>
      /* CSS Reset & Base */
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      :root {
        --matrix-green: #00ff41;
        --dark-bg: #0a0a0a;
        --darker-bg: #050505;
        --card-bg: #111111;
        --text-primary: #e0e0e0;
        --text-secondary: #a0a0a0;
        --border-color: #1a1a1a;
      }

      html {
        scroll-behavior: smooth;
      }

      body {
        font-family: "Courier New", Courier, monospace;
        background: var(--dark-bg);
        color: var(--text-primary);
        line-height: 1.6;
        overflow-x: hidden;
      }

      /* Matrix Background Canvas */
      #matrix-bg {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: 0;
        opacity: 0.15;
      }

      /* Container */
      .container {
        position: relative;
        z-index: 1;
        max-width: 1200px;
        margin: 0 auto;
        padding: 2rem;
      }

      /* Hero Section with NFO Box */
      .hero {
        min-height: auto;
        display: flex;
        flex-direction: column;
        justify-content: flex-start;
        align-items: center;
        padding: 4rem 0 3rem 0;
      }

      .hero-photo {
        width: 200px;
        height: 200px;
        margin-bottom: 1.5rem;
        position: relative;
      }

      .hero-photo img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        border-radius: 50%;
        border: 3px solid var(--matrix-green);
        box-shadow: 0 0 30px rgba(0, 255, 65, 0.5);
        animation: photoGlow 2s ease-in-out infinite alternate;
      }

      @keyframes photoGlow {
        from {
          box-shadow: 0 0 20px rgba(0, 255, 65, 0.4);
        }
        to {
          box-shadow: 0 0 40px rgba(0, 255, 65, 0.8);
        }
      }

      /* NFO Box Container */
      .nfo-container {
        position: relative;
        width: 100%;
        max-width: 800px;
      }

      /* CRT Screen Effect */
      .crt-screen {
        position: relative;
        background: rgba(0, 20, 0, 0.9);
        border: 2px solid var(--matrix-green);
        border-radius: 10px;
        padding: 2rem;
        box-shadow:
          0 0 50px rgba(0, 255, 65, 0.3),
          inset 0 0 30px rgba(0, 255, 65, 0.1);
      }

      /* CRT Scanline Animation - Multiple Lines */
      .crt-screen::before {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 2px;
        background: linear-gradient(
          to bottom,
          rgba(0, 255, 65, 0) 0%,
          rgba(0, 255, 65, 0.9) 50%,
          rgba(0, 255, 65, 0) 100%
        );
        animation: scanline1 4s linear infinite;
        pointer-events: none;
        z-index: 100;
        opacity: 1;
      }

      /* Second Scanline */
      .crt-screen::after {
        content: "";
        position: absolute;
        bottom: 0;
        left: 0;
        width: 100%;
        height: 3px;
        background: linear-gradient(
          to bottom,
          rgba(0, 255, 65, 0) 0%,
          rgba(0, 255, 65, 0.6) 50%,
          rgba(0, 255, 65, 0) 100%
        );
        animation: scanline2 6s linear infinite reverse;
        pointer-events: none;
        z-index: 100;
        opacity: 0.7;
      }

      /* Third Scanline with pulsing */
      .nfo-box::before {
        content: "";
        position: absolute;
        top: 30%;
        left: 0;
        width: 100%;
        height: 1px;
        background: rgba(0, 255, 65, 0.4);
        animation:
          scanline3 5s linear infinite,
          pulse 2s ease-in-out infinite;
        pointer-events: none;
        z-index: 10;
      }

      @keyframes scanline1 {
        0% {
          top: 0%;
          opacity: 0;
        }
        10% {
          opacity: 1;
        }
        90% {
          opacity: 1;
        }
        100% {
          top: 100%;
          opacity: 0;
        }
      }

      @keyframes scanline2 {
        0% {
          bottom: 0%;
          opacity: 0;
        }
        10% {
          opacity: 0.7;
        }
        90% {
          opacity: 0.7;
        }
        100% {
          bottom: 100%;
          opacity: 0;
        }
      }

      @keyframes scanline3 {
        0% {
          top: 0%;
        }
        100% {
          top: 100%;
        }
      }

      @keyframes pulse {
        0%,
        100% {
          opacity: 0.2;
        }
        50% {
          opacity: 0.6;
        }
      }

      /* CRT Flicker Effect - on nfo-box instead */
      .nfo-box::after {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 255, 65, 0.03);
        animation: flicker 0.15s infinite;
        pointer-events: none;
        z-index: 5;
      }

      @keyframes flicker {
        0%,
        100% {
          opacity: 1;
        }
        50% {
          opacity: 0.95;
        }
      }

      /* NFO Box ASCII */
