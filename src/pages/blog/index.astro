---
import { getCollection } from 'astro:content';

const blogPosts = await getCollection('blog');

// Sort by date, newest first
const sortedPosts = blogPosts.sort((a, b) => {
  return new Date(b.data.pubDate).getTime() - new Date(a.data.pubDate).getTime();
});
---

<!DOCTYPE html>
<html lang="de">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Blog - Steven Noack</title>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      background: #000;
      color: #0f0;
      font-family: 'Courier New', monospace;
      padding: 2rem;
      min-height: 100vh;
    }

    .container {
      max-width: 1200px;
      margin: 0 auto;
    }

    h1 {
      color: #0f0;
      text-shadow: 0 0 10px #0f0;
      margin-bottom: 2rem;
      font-size: 2.5rem;
    }

    .back-link {
      display: inline-block;
      color: #0f0;
      text-decoration: none;
      margin-bottom: 2rem;
      padding: 0.5rem 1rem;
      border: 1px solid #0f0;
      transition: all 0.3s;
    }

    .back-link:hover {
      background: #0f0;
      color: #000;
      box-shadow: 0 0 20px #0f0;
    }

    .blog-list {
      display: grid;
      gap: 2rem;
    }

    .blog-post {
      border: 1px solid #0f0;
      padding: 1.5rem;
      transition: all 0.3s;
      background: rgba(0, 255, 0, 0.05);
    }

    .blog-post:hover {
      box-shadow: 0 0 20px #0f0;
      background: rgba(0, 255, 0, 0.1);
    }

    .blog-post h2 {
      margin-bottom: 0.5rem;
      font-size: 1.8rem;
    }

    .blog-post h2 a {
      color: #0f0;
      text-decoration: none;
    }

    .blog-post h2 a:hover {
      text-shadow: 0 0 10px #0f0;
    }

    .post-meta {
      color: #0a0;
      font-size: 0.9rem;
      margin-bottom: 1rem;
      display: flex;
      gap: 1rem;
      flex-wrap: wrap;
    }

    .post-description {
      line-height: 1.6;
      margin-bottom: 1rem;
    }

    .post-tags {
      display: flex;
      gap: 0.5rem;
      flex-wrap: wrap;
    }

    .tag {
      display: inline-block;
      padding: 0.25rem 0.75rem;
      border: 1px solid #0f0;
      font-size: 0.85rem;
      background: rgba(0, 255, 0, 0.1);
    }

    @media (max-width: 768px) {
      body {
        padding: 1rem;
      }

      h1 {
        font-size: 2rem;
      }

      .blog-post h2 {
        font-size: 1.5rem;
      }
    }
  </style>
</head>
<body>
  <div class="container">
    <a href="/" class="back-link">← Zurück zur Hauptseite</a>
    
    <h1>Blog</h1>

    <div class="blog-list">
      {sortedPosts.map((post) => (
        <article class="blog-post">
          <h2>
            <a href={`/blog/${post.slug}`}>
              {post.data.title}
            </a>
          </h2>
          
          <div class="post-meta">
            <span>{post.data.pubDate}</span>
            <span>•</span>
            <span>{post.data.author}</span>
          </div>

          <p class="post-description">
            {post.data.description}
          </p>

          <div class="post-tags">
            {post.data.tags.map((tag) => (
              <span class="tag">{tag}</span>
            ))}
          </div>
        </article>
      ))}
    </div>
  </div>
</body>
</html>
