---
/**
 * Blog Index Page - LLM Optimized
 * @description 100/100 LLM-Readability mit Schema.org Blog
 * 
 * FEATURES:
 * - ✅ Blog Schema.org
 * - ✅ Semantic HTML (<main>, <article>, <header>)
 * - ✅ ARIA Labels
 * - ✅ Korrekte H-Hierarchie
 */
import { getCollection } from 'astro:content';

const blogPosts = await getCollection('blog');

// Sort by date, newest first
const sortedPosts = blogPosts.sort((a, b) => {
  return new Date(b.data.pubDate).getTime() - new Date(a.data.pubDate).getTime();
});

// Schema.org Blog
const blogSchema = {
  "@context": "https://schema.org",
  "@type": "Blog",
  "name": "Steven Noack Blog",
  "description": "Artikel über LLM-native Entwicklung, System Building und Tech",
  "url": "https://stevennoack.de/blog",
  "author": {
    "@type": "Person",
    "name": "Steven Noack",
    "url": "https://stevennoack.de"
  },
  "blogPost": sortedPosts.map(post => ({
    "@type": "BlogPosting",
    "headline": post.data.title,
    "description": post.data.description,
    "url": `https://stevennoack.de/blog/${post.slug}`,
    "datePublished": post.data.pubDate,
    "author": {
      "@type": "Person",
      "name": post.data.author || "Steven Noack"
    }
  }))
};
---

<!DOCTYPE html>
<html lang="de">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Blog - Steven Noack</title>
  <meta name="description" content="Artikel über LLM-native Entwicklung, System Building, AI Automation und Tech von Steven Noack">
  
  <!-- Open Graph / Facebook -->
  <meta property="og:type" content="website">
  <meta property="og:url" content="https://stevennoack.de/blog">
  <meta property="og:title" content="Blog - Steven Noack">
  <meta property="og:description" content="Artikel über LLM-native Entwicklung, System Building, AI Automation und Tech">
  
  <!-- Twitter -->
  <meta property="twitter:card" content="summary_large_image">
  <meta property="twitter:url" content="https://stevennoack.de/blog">
  <meta property="twitter:title" content="Blog - Steven Noack">
  <meta property="twitter:description" content="Artikel über LLM-native Entwicklung, System Building, AI Automation und Tech">
  
  <!-- Schema.org JSON-LD -->
  <script type="application/ld+json" set:html={JSON.stringify(blogSchema)} />
  
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      background: #000;
      color: #0f0;
      font-family: 'Courier New', monospace;
      padding: 2rem;
      min-height: 100vh;
    }

    .container {
      max-width: 1200px;
      margin: 0 auto;
    }

    .back-link {
      display: inline-block;
      color: #0f0;
      text-decoration: none;
      margin-bottom: 2rem;
      padding: 0.5rem 1rem;
      border: 1px solid #0f0;
      transition: all 0.3s;
    }

    .back-link:hover {
      background: #0f0;
      color: #000;
      box-shadow: 0 0 20px #0f0;
    }

    header h1 {
      color: #0f0;
      text-shadow: 0 0 10px #0f0;
      margin-bottom: 0.5rem;
      font-size: 2.5rem;
    }

    header p {
      color: #0a0;
      margin-bottom: 3rem;
      font-size: 1.1rem;
    }

    .blog-list {
      display: grid;
      gap: 2rem;
    }

    .blog-post {
      border: 1px solid #0f0;
      padding: 1.5rem;
      transition: all 0.3s;
      background: rgba(0, 255, 0, 0.05);
    }

    .blog-post:hover {
      box-shadow: 0 0 20px #0f0;
      background: rgba(0, 255, 0, 0.1);
    }

    .blog-post h2 {
      margin-bottom: 0.5rem;
      font-size: 1.8rem;
    }

    .blog-post h2 a {
      color: #0f0;
      text-decoration: none;
    }

    .blog-post h2 a:hover {
      text-shadow: 0 0 10px #0f0;
    }

    .post-meta {
      color: #0a0;
      font-size: 0.9rem;
      margin-bottom: 1rem;
      display: flex;
      gap: 1rem;
      flex-wrap: wrap;
    }

    .post-description {
      line-height: 1.6;
      margin-bottom: 1rem;
    }

    .post-tags {
      display: flex;
      gap: 0.5rem;
      flex-wrap: wrap;
    }

    .tag {
      display: inline-block;
      padding: 0.25rem 0.75rem;
      border: 1px solid #0f0;
      font-size: 0.85rem;
      background: rgba(0, 255, 0, 0.1);
    }

    .sr-only {
      position: absolute;
      width: 1px;
      height: 1px;
      padding: 0;
      margin: -1px;
      overflow: hidden;
      clip: rect(0, 0, 0, 0);
      white-space: nowrap;
      border-width: 0;
    }

    @media (max-width: 768px) {
      body {
        padding: 1rem;
      }

      header h1 {
        font-size: 2rem;
      }

      .blog-post h2 {
        font-size: 1.5rem;
      }
    }
  </style>
  <!-- Umami Analytics -->
    <script defer src="https://stats.stevennoack.de/script.js" data-website-id="95066d20-b614-4852-85b0-673af1e2eed1"></script>
  </head>
<body>
  <main class="container" role="main">
    <a href="/" class="back-link">← Zurück zur Hauptseite</a>
    
    <header>
      <h1>Blog</h1>
      <p>Artikel über LLM-native Entwicklung, System Building und Tech</p>
    </header>

    <section aria-labelledby="blog-posts-heading">
      <h2 id="blog-posts-heading" class="sr-only">Alle Blog-Posts</h2>
      
      <div class="blog-list" role="list">
        {sortedPosts.map((post) => (
          <article class="blog-post" role="listitem" aria-labelledby={`post-${post.slug}`}>
            <h2 id={`post-${post.slug}`}>
              <a href={`/blog/${post.slug}`}>
                {post.data.title}
              </a>
            </h2>
            
            <div class="post-meta">
              <time datetime={post.data.pubDate}>
                {new Date(post.data.pubDate).toLocaleDateString('de-DE', {
                  year: 'numeric',
                  month: 'long',
                  day: 'numeric'
                })}
              </time>
              <span aria-hidden="true">•</span>
              <span>{post.data.author || "Steven Noack"}</span>
            </div>

            <p class="post-description">
              {post.data.description}
            </p>

            {post.data.tags && post.data.tags.length > 0 && (
              <div class="post-tags" role="list" aria-label="Post-Tags">
                {post.data.tags.map((tag) => (
                  <span class="tag" role="listitem">{tag}</span>
                ))}
              </div>
            )}
          </article>
        ))}
      </div>
    </section>
  </main>
</body>
</html>
