---
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const blogPosts = await getCollection('blog');
  return blogPosts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await post.render();
---

<!DOCTYPE html>
<html lang="de">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{post.data.title} - Steven Noack</title>
  <meta name="description" content={post.data.description}>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      background: #000;
      color: #0f0;
      font-family: 'Courier New', monospace;
      padding: 2rem;
      min-height: 100vh;
      line-height: 1.6;
    }

    .container {
      max-width: 900px;
      margin: 0 auto;
    }

    .back-link {
      display: inline-block;
      color: #0f0;
      text-decoration: none;
      margin-bottom: 2rem;
      padding: 0.5rem 1rem;
      border: 1px solid #0f0;
      transition: all 0.3s;
    }

    .back-link:hover {
      background: #0f0;
      color: #000;
      box-shadow: 0 0 20px #0f0;
    }

    article {
      border: 1px solid #0f0;
      padding: 2rem;
      background: rgba(0, 255, 0, 0.05);
    }

    h1 {
      color: #0f0;
      text-shadow: 0 0 10px #0f0;
      margin-bottom: 1rem;
      font-size: 2.5rem;
      line-height: 1.2;
    }

    .post-meta {
      color: #0a0;
      font-size: 0.9rem;
      margin-bottom: 2rem;
      padding-bottom: 1rem;
      border-bottom: 1px solid #0f0;
      display: flex;
      gap: 1rem;
      flex-wrap: wrap;
    }

    .post-tags {
      display: flex;
      gap: 0.5rem;
      flex-wrap: wrap;
      margin-bottom: 2rem;
    }

    .tag {
      display: inline-block;
      padding: 0.25rem 0.75rem;
      border: 1px solid #0f0;
      font-size: 0.85rem;
      background: rgba(0, 255, 0, 0.1);
    }

    .content {
      margin-top: 2rem;
    }

    /* Markdown Content Styles */
    .content h1, .content h2, .content h3, .content h4, .content h5, .content h6 {
      color: #0f0;
      margin-top: 2rem;
      margin-bottom: 1rem;
      text-shadow: 0 0 5px #0f0;
    }

    .content h1 { font-size: 2.2rem; }
    .content h2 { font-size: 1.8rem; }
    .content h3 { font-size: 1.5rem; }
    .content h4 { font-size: 1.3rem; }

    .content p {
      margin-bottom: 1.2rem;
      line-height: 1.8;
    }

    .content ul, .content ol {
      margin-bottom: 1.2rem;
      padding-left: 2rem;
    }

    .content li {
      margin-bottom: 0.5rem;
    }

    .content a {
      color: #0f0;
      text-decoration: underline;
      transition: all 0.3s;
    }

    .content a:hover {
      text-shadow: 0 0 10px #0f0;
    }

    .content code {
      background: rgba(0, 255, 0, 0.1);
      padding: 0.2rem 0.4rem;
      border: 1px solid #0f0;
      font-family: 'Courier New', monospace;
      font-size: 0.9em;
    }

    .content pre {
      background: rgba(0, 255, 0, 0.05);
      border: 1px solid #0f0;
      padding: 1rem;
      overflow-x: auto;
      margin-bottom: 1.2rem;
    }

    .content pre code {
      background: none;
      border: none;
      padding: 0;
    }

    .content blockquote {
      border-left: 3px solid #0f0;
      padding-left: 1rem;
      margin: 1.2rem 0;
      font-style: italic;
      color: #0a0;
    }

    .content table {
      width: 100%;
      border-collapse: collapse;
      margin-bottom: 1.2rem;
    }

    .content table th,
    .content table td {
      border: 1px solid #0f0;
      padding: 0.5rem;
    }

    .content table th {
      background: rgba(0, 255, 0, 0.1);
    }

    .content hr {
      border: none;
      border-top: 1px solid #0f0;
      margin: 2rem 0;
    }

    @media (max-width: 768px) {
      body {
        padding: 1rem;
      }

      article {
        padding: 1rem;
      }

      h1 {
        font-size: 2rem;
      }

      .content h1 { font-size: 1.8rem; }
      .content h2 { font-size: 1.5rem; }
      .content h3 { font-size: 1.3rem; }

      .content pre {
        font-size: 0.85rem;
      }
    }
  </style>
</head>
<body>
  <div class="container">
    <a href="/blog" class="back-link">← Zurück zum Blog</a>
    
    <article>
      <h1>{post.data.title}</h1>
      
      <div class="post-meta">
        <span>{post.data.pubDate}</span>
        <span>•</span>
        <span>{post.data.author}</span>
      </div>

      <div class="post-tags">
        {post.data.tags.map((tag) => (
          <span class="tag">{tag}</span>
        ))}
      </div>

      <div class="content">
        <Content />
      </div>
    </article>
  </div>
</body>
</html>
