    <style>
      * { margin: 0; padding: 0; box-sizing: border-box; }

      body {
        background: #0a0a0f;
        color: #d4d4d4;
        font-family: "Courier New", monospace;
        padding: 2rem;
        min-height: 100vh;
        line-height: 1.8;
        font-size: 18px;
      }

      body.light-mode { background: #fafafa; color: #2a2a2a; }

      .container { max-width: 900px; margin: 0 auto; padding-top: 4rem; }

      .loading {
        text-align: center;
        padding: 4rem;
        color: #00d4ff;
      }

      .loading-spinner {
        display: inline-block;
        width: 40px;
        height: 40px;
        border: 3px solid rgba(0, 212, 255, 0.3);
        border-radius: 50%;
        border-top-color: #00d4ff;
        animation: spin 1s linear infinite;
        margin-bottom: 1rem;
      }

      @keyframes spin { to { transform: rotate(360deg); } }

      .error {
        text-align: center;
        padding: 4rem;
        color: #ef4444;
      }

      .breadcrumb {
        display: flex;
        gap: 0.5rem;
        font-size: 0.9rem;
        color: #0891b2;
        list-style: none;
        margin-bottom: 2rem;
      }

      .breadcrumb a { color: #00d4ff; text-decoration: none; }

      .back-link {
        display: inline-block;
        color: #00d4ff;
        text-decoration: none;
        margin-bottom: 2rem;
        padding: 0.5rem 1rem;
        border: 1px solid #00d4ff;
      }

      .back-link:hover { background: #00d4ff; color: #000; }

      .nostr-badge {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.3rem 0.8rem;
        background: rgba(0, 212, 255, 0.1);
        border: 1px solid #00d4ff;
        border-radius: 4px;
        font-size: 0.8rem;
        color: #00d4ff;
        margin-bottom: 1rem;
      }

      .nostr-badge a { color: #00d4ff; text-decoration: none; }

      article {
        border: 1px solid #00d4ff;
        padding: 2rem;
        background: rgba(0, 212, 255, 0.03);
      }

      body.light-mode article { border-color: #0891b2; }

      article header {
        margin-bottom: 2rem;
        padding-bottom: 1.5rem;
        border-bottom: 1px solid #00d4ff;
      }

      article header h1 {
        color: #00d4ff;
        font-size: 2.5rem;
        line-height: 1.2;
        font-family: "Courier New", monospace !important;
      }

      body.light-mode article header h1 { color: #0891b2; }

      .post-meta {
        color: #0891b2;
        font-size: 0.9rem;
        display: flex;
        gap: 1rem;
        flex-wrap: wrap;
        margin: 1rem 0;
      }

      .post-tags { display: flex; gap: 0.5rem; flex-wrap: wrap; }

      .tag {
        padding: 0.25rem 0.75rem;
        border: 1px solid #00d4ff;
        font-size: 0.85rem;
        background: rgba(0, 212, 255, 0.1);
      }

      .content { margin-top: 2rem; }

      .content h1, .content h2, .content h3, 
      .content h4, .content h5, .content h6 {
        color: #00d4ff;
        font-family: "Courier New", monospace !important;
        margin-top: 2rem;
        margin-bottom: 1rem;
      }

      body.light-mode .content h1,
      body.light-mode .content h2,
      body.light-mode .content h3 { color: #0891b2; }

      .content h2 { font-size: 1.8rem; }
      .content h3 { font-size: 1.5rem; }

      .content p { margin-bottom: 1.5rem; line-height: 1.9; max-width: 75ch; }

      .content ul, .content ol {
        margin-bottom: 1.5rem;
        padding-left: 2rem;
      }

      .content li { margin-bottom: 0.7rem; }

      .content a { color: #00d4ff; text-decoration: underline; }
      body.light-mode .content a { color: #0891b2; }

      .content code {
        background: rgba(0, 212, 255, 0.1);
        padding: 0.2rem 0.4rem;
        border: 1px solid #00d4ff;
        font-family: "Courier New", monospace;
        font-size: 0.9em;
      }

      .content pre {
        background: rgba(0, 212, 255, 0.05);
        border: 1px solid #00d4ff;
        padding: 1rem;
        overflow-x: auto;
        margin-bottom: 1.5rem;
      }

      .content pre code { background: none; border: none; padding: 0; }

      .content blockquote {
        border-left: 3px solid #00d4ff;
        padding-left: 1.5rem;
        margin: 2rem 0;
        font-style: italic;
        color: #b0b0b0;
      }

      .content table { width: 100%; border-collapse: collapse; margin-bottom: 1.5rem; }
      .content table th, .content table td { border: 1px solid #00d4ff; padding: 0.5rem; }
      .content table th { background: rgba(0, 212, 255, 0.1); }

      .content hr { border: none; border-top: 1px solid #00d4ff; margin: 2rem 0; }

      .content img { max-width: 100%; border: 1px solid #00d4ff; margin: 1rem 0; }

      /* Callouts */
      .callout {
        background: rgba(0, 212, 255, 0.05);
        border: 1px solid #00d4ff;
        border-left: 3px solid #00d4ff;
        margin: 1.5rem 0;
        border-radius: 4px;
      }

      .callout summary {
        padding: 0.8rem 1rem;
        cursor: pointer;
        font-weight: bold;
        color: #00d4ff;
        list-style: none;
      }

      .callout summary::-webkit-details-marker { display: none; }
      .callout summary::before { content: '‚ñ∂'; font-size: 0.7em; margin-right: 0.5rem; }
      .callout[open] summary::before { content: '‚ñº'; }

      .callout-content { padding: 0 1rem 1rem 1rem; }

      .callout-author { border-left-color: #a855f7; }
      .callout-author summary { color: #a855f7; }
      .callout-info { border-left-color: #06b6d4; }
      .callout-info summary { color: #06b6d4; }
      .callout-tip { border-left-color: #10b981; }
      .callout-tip summary { color: #10b981; }
      .callout-tldr { border-left-color: #22c55e; }
      .callout-tldr summary { color: #22c55e; }

      article footer {
        margin-top: 3rem;
        padding-top: 1.5rem;
        border-top: 1px solid #00d4ff;
        font-size: 0.9rem;
        color: #0891b2;
      }

      .relay-info {
        margin-top: 1rem;
        font-size: 0.8rem;
        color: #666;
        padding: 0.5rem;
        background: rgba(0,0,0,0.2);
        border-radius: 4px;
      }

      .mode-toggle {
        position: fixed;
        top: 2rem;
        right: 2rem;
        background: none;
        border: 2px solid #00d4ff;
        color: #00d4ff;
        padding: 0.5rem 1rem;
        cursor: pointer;
        font-family: "Courier New", monospace;
        z-index: 1000;
      }

      .mode-toggle:hover { background: #00d4ff; color: #000; }

      body.light-mode .mode-toggle { border-color: #0891b2; color: #0891b2; }

      @media (max-width: 768px) {
        body { padding: 1rem; font-size: 16px; }
        article { padding: 1.5rem; }
        article header h1 { font-size: 1.8rem; }
      }
    </style>
  </head>
  <body>
    <button class="mode-toggle" id="mode-toggle">‚òÄÔ∏è Light</button>

    <div class="container">
      <nav>
        <ol class="breadcrumb">
          <li><a href="/">Home</a></li>
          <li style="color:#0891b2">‚Üí</li>
          <li><a href="/nostr">Nostr</a></li>
          <li style="color:#0891b2">‚Üí</li>
          <li>Event</li>
        </ol>
      </nav>

      <a href="/nostr" class="back-link">‚Üê Zur√ºck zu Nostr</a>

      <div id="event-container">
        <div class="loading">
          <div class="loading-spinner"></div>
          <p>Event wird von deinen Relays geladen...</p>
          <p id="status" style="font-size:0.8rem;margin-top:1rem;color:#888"></p>
        </div>
      </div>
    </div>

    <script type="module">
      // Bibliotheken von CDN - nur Code, keine Daten!
      import { nip19, SimplePool } from 'https://esm.sh/nostr-tools@2.7.0';
      import { marked } from 'https://esm.sh/marked@12.0.0';

      // DEINE Relays - Events werden von HIER geladen
      const MY_RELAYS = [
        'wss://relay.stevennoack.de',
        'wss://relay.primal.net',
        'wss://nos.lol',
        'wss://relay.damus.io'
      ];

      const container = document.getElementById('event-container');
      const status = document.getElementById('status');

      // Event ID aus URL extrahieren
      const path = window.location.pathname;
      const match = path.match(/\/nostr\/read\/(.+)/);
      const eventId = match ? match[1] : null;

      if (!eventId) {
        showError('Keine Event-ID in der URL');
      } else {
        loadEvent(eventId);
      }

      async function loadEvent(id) {
        try {
          status.textContent = 'Dekodiere Event-ID...';
          
          let filter = {};
          let decoded;
          let relaysFromId = [];

          // Verschiedene Nostr-ID-Formate dekodieren
          if (id.startsWith('nevent')) {
            decoded = nip19.decode(id);
            filter = { ids: [decoded.data.id] };
            relaysFromId = decoded.data.relays || [];
          } else if (id.startsWith('naddr')) {
            decoded = nip19.decode(id);
            filter = {
              kinds: [decoded.data.kind],
              authors: [decoded.data.pubkey],
              '#d': [decoded.data.identifier]
            };
            relaysFromId = decoded.data.relays || [];
          } else if (id.startsWith('note')) {
            decoded = nip19.decode(id);
            filter = { ids: [decoded.data] };
          } else {
            // Rohes Hex
            filter = { ids: [id] };
          }

          // Relays kombinieren - DEINE zuerst!
          const relaysToUse = [...new Set([...MY_RELAYS, ...relaysFromId])];
          
          status.textContent = `Verbinde mit ${relaysToUse.length} Relays...`;
          console.log('Verwende Relays:', relaysToUse);

          const pool = new SimplePool();
          
          status.textContent = 'Suche Event...';

          const event = await pool.get(relaysToUse, filter);

          if (!event) {
            showError('Event nicht gefunden auf den Relays');
            pool.close(relaysToUse);
            return;
          }

          status.textContent = 'Gefunden! Rendere...';
          
          // Finde heraus von welchem Relay es kam
          const sourceRelay = MY_RELAYS[0]; // Erste Priorit√§t
          
          renderEvent(event, sourceRelay);
          pool.close(relaysToUse);

        } catch (err) {
          console.error('Fehler:', err);
          showError('Fehler beim Laden: ' + err.message);
        }
      }

      function renderEvent(event, relay) {
        // Metadaten aus Tags extrahieren
        const getTag = (name) => {
          const tag = event.tags.find(t => t[0] === name);
          return tag ? tag[1] : null;
        };

        const title = getTag('title') || 'Nostr Event';
        const summary = getTag('summary') || '';
        const image = getTag('image') || '';
        const publishedAt = getTag('published_at')
          ? new Date(parseInt(getTag('published_at')) * 1000)
          : new Date(event.created_at * 1000);

        // Hashtags sammeln
        const hashtags = event.tags
          .filter(t => t[0] === 't')
          .map(t => t[1]);

        // Markdown zu HTML konvertieren
        const contentHtml = marked.parse(event.content);

        // Autor npub
        const npub = nip19.npubEncode(event.pubkey);
        const nevent = nip19.neventEncode({ id: event.id });

        // Seiten-Titel aktualisieren
        document.title = title + ' - Steven Noack';

        container.innerHTML = `
          <article>
            ${image ? `
              <div style="margin:-2rem -2rem 2rem -2rem;">
                <img src="${image}" alt="${escapeHtml(title)}" style="width:100%;display:block;">
              </div>
            ` : ''}
            
            <header>
              <div class="nostr-badge">
                ‚ö° Live von Nostr geladen
              </div>
              
              <h1>${escapeHtml(title)}</h1>
              
              ${summary ? `<p style="color:#888;margin-top:0.5rem">${escapeHtml(summary)}</p>` : ''}
              
              <div class="post-meta">
                <time>${publishedAt.toLocaleDateString('de-DE', { year: 'numeric', month: 'long', day: 'numeric' })}</time>
                <span>‚Ä¢</span>
                <span>Kind ${event.kind}</span>
              </div>

              ${hashtags.length > 0 ? `
                <div class="post-tags">
                  ${hashtags.map(t => `<span class="tag">${escapeHtml(t)}</span>`).join('')}
                </div>
              ` : ''}
            </header>

            <section class="content">
              ${contentHtml}
            </section>

            <footer>
              <p><strong>Event-ID:</strong> <code>${event.id.slice(0, 24)}...</code></p>
              <p><strong>Autor:</strong> <code>${npub.slice(0, 24)}...</code></p>
              <p><strong>Signatur:</strong> <code>${event.sig.slice(0, 24)}...</code></p>
              
              <div class="relay-info">
                üì° Geladen von: ${relay}<br>
                üîë Kryptographisch signiert und verifiziert
              </div>
            </footer>
          </article>
        `;

        // Obsidian Callouts umwandeln
        convertCallouts();
      }

      function convertCallouts() {
        const blockquotes = document.querySelectorAll('.content blockquote');
        
        blockquotes.forEach(bq => {
          const html = bq.innerHTML;
          const match = html.match(/^\s*<p>\s*\[!(\w+)\](-)?/);
          if (!match) return;

          const type = match[1].toLowerCase();
          const collapsed = match[2] === '-';

          // Titel extrahieren
          const afterMarker = html.replace(/^\s*<p>\s*\[!\w+\]-?\s*/, '');
          const boldMatch = afterMarker.match(/^<strong>(.+?)<\/strong>/);
          const plainMatch = afterMarker.match(/^([^<\n]+)/);
          
          let title;
          if (boldMatch) {
            title = boldMatch[1];
          } else if (plainMatch) {
            title = plainMatch[1].trim();
          } else {
            title = type.charAt(0).toUpperCase() + type.slice(1);
          }

          // Content bereinigen
          let content = html;
          content = content.replace(/^\s*<p>\s*\[!\w+\]-?\s*<strong>.+?<\/strong>\s*/, '<p>');
          content = content.replace(/^\s*<p>\s*\[!\w+\]-?\s*[^<\n]+/, '<p>');
          content = content.replace(/^<p>\s*<br\s*\/?>\s*/, '<p>');
          content = content.replace(/^<p>\s*<\/p>/, '');

          const details = document.createElement('details');
          details.className = 'callout callout-' + type;
          if (!collapsed) details.open = true;

          details.innerHTML = `
            <summary>${title}</summary>
            <div class="callout-content">${content}</div>
          `;

          bq.replaceWith(details);
        });
      }

      function showError(msg) {
        container.innerHTML = `
          <div class="error">
            <div style="font-size:3rem;margin-bottom:1rem">‚ö†Ô∏è</div>
            <p>${escapeHtml(msg)}</p>
            <p style="margin-top:2rem;font-size:0.9rem">
              <a href="/nostr" style="color:#00d4ff">‚Üê Zur√ºck zu Nostr</a>
            </p>
          </div>
        `;
      }

      function escapeHtml(text) {
        const div = document.createElement('div');
        div.textContent = text;
        return div.innerHTML;
      }

      // Dark/Light Mode
      const toggle = document.getElementById('mode-toggle');
      const saved = localStorage.getItem('colorMode');
      if (saved === 'light') {
        document.body.classList.add('light-mode');
        toggle.textContent = 'üåô Dark';
      }

      toggle.addEventListener('click', () => {
        document.body.classList.toggle('light-mode');
        const isLight = document.body.classList.contains('light-mode');
        toggle.textContent = isLight ? 'üåô Dark' : '‚òÄÔ∏è Light';
        localStorage.setItem('colorMode', isLight ? 'light' : 'dark');
      });
    </script>
  </body>
</html>
