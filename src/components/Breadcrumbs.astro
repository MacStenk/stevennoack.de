---
interface Props {
  items: Array<{
    label: string;
    href?: string;
  }>;
}

const { items } = Astro.props;
---

<nav aria-label="Breadcrumb" class="breadcrumbs">
  <ol>
    {items.map((item, index) => (
      <li>
        {item.href ? (
          <a href={item.href}>{item.label}</a>
        ) : (
          <span>{item.label}</span>
        )}
        {index < items.length - 1 && <span class="separator">/</span>}
      </li>
    ))}
  </ol>
</nav>

<style>
  .breadcrumbs {
    margin-bottom: 2rem;
    font-size: 0.875rem;
  }

  .breadcrumbs ol {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    list-style: none;
    padding: 0;
    margin: 0;
    color: var(--sl-color-gray-2);
  }

  .breadcrumbs li {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .breadcrumbs a {
    color: var(--sl-color-gray-2);
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .breadcrumbs a:hover {
    color: var(--sl-color-accent);
    text-decoration: underline;
  }

  .breadcrumbs span:not(.separator) {
    color: var(--sl-color-text);
    font-weight: 500;
  }

  .separator {
    color: var(--sl-color-gray-3);
    user-select: none;
  }
</style>