---
/**
 * Hero Section Component
 * @description Hero with photo and NFO box
 */

import NFOBox from './NFOBox.astro';
import { nfoContent } from '@/data/nfo-content.js';
---

<section class="hero">
  <div class="hero-photo">
    <img src="/steven-noack.png" alt="Steven Noack" />
  </div>

  <NFOBox content={nfoContent} speed={10} delay={300} />

  <a href="/blog" class="blog-button">
    <span class="button-text">â†’ Blog</span>
  </a>
</section>

<style>
  .hero {
    min-height: auto;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: center;
    padding: 4rem 0 3rem 0;
  }

  .hero-photo {
    width: 200px;
    height: 200px;
    margin-bottom: 1.5rem;
    position: relative;
  }

  .hero-photo img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 50%;
    border: 3px solid var(--matrix-green);
    box-shadow: 0 0 30px rgba(0, 255, 65, 0.5);
    animation: photoGlow 2s ease-in-out infinite alternate;
  }

  @keyframes photoGlow {
    from {
      box-shadow: 0 0 20px rgba(0, 255, 65, 0.4);
    }
    to {
      box-shadow: 0 0 40px rgba(0, 255, 65, 0.8);
    }
  }

  /* Blog Button */
  .blog-button {
    display: inline-block;
    margin-top: 2rem;
    padding: 1rem 2rem;
    background: transparent;
    border: 2px solid var(--matrix-green);
    color: var(--matrix-green);
    font-family: 'Courier New', monospace;
    font-size: 1.2rem;
    text-decoration: none;
    text-transform: uppercase;
    letter-spacing: 2px;
    position: relative;
    overflow: hidden;
    transition: all 0.3s ease;
    cursor: pointer;
  }

  .blog-button::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: var(--matrix-green);
    transition: left 0.3s ease;
    z-index: -1;
  }

  .blog-button:hover {
    color: #000;
    box-shadow: 0 0 20px var(--matrix-green);
  }

  .blog-button:hover::before {
    left: 0;
  }

  .button-text {
    position: relative;
    z-index: 1;
  }

  @media (max-width: 768px) {
    .hero {
      padding: 2rem 0;
    }

    .hero-photo {
      width: 150px;
      height: 150px;
    }

    .blog-button {
      font-size: 1rem;
      padding: 0.8rem 1.5rem;
      margin-top: 1.5rem;
    }
  }
</style>
