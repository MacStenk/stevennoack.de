---
/**
 * Project Card Component
 * @description Individual project card with Markdown content via slot
 * UPDATED: Subtle minimal hover animation instead of spinning border
 */
interface Props {
  title: string;
  status: "Active" | "Building" | "Planned" | "Archived";
  url?: string;
  techTags: string[];
}

const { title, status, url, techTags } = Astro.props;

const statusColors = {
  Active: "var(--matrix-green)",
  Building: "rgba(255, 200, 0, 0.9)",
  Planned: "rgba(100, 150, 255, 0.9)",
  Archived: "rgba(150, 150, 150, 0.7)",
};
---

<div class="project-card">
  <div class="project-header">
    <h3 class="project-title">
      {
        url ? (
          <a href={url} target="_blank" rel="noopener noreferrer" class="project-link">
            {title}
          </a>
        ) : (
          title
        )
      }
    </h3>
    <span class="project-status" style={`color: ${statusColors[status]}`}>
      [{status}]
    </span>
  </div>

  <div class="project-description">
    <slot />
  </div>

  <div class="project-tags">
    {techTags.map((tag) => <span class="tech-tag">{tag}</span>)}
  </div>
</div>

<style>
  .project-card {
    position: relative;
    background: rgba(0, 20, 0, 0.85);
    border: 1px solid rgba(0, 255, 65, 0.3);
    border-radius: 8px;
    padding: 1.5rem;
    transition: all 0.3s ease;
  }

  /* Subtle hover animation - lift + glow */
  .project-card:hover {
    transform: translateY(-4px);
    border-color: rgba(0, 255, 65, 0.6);
    box-shadow: 
      0 4px 20px rgba(0, 255, 65, 0.15),
      0 0 40px rgba(0, 255, 65, 0.1);
    background: rgba(0, 25, 0, 0.9);
  }

  .project-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 1rem;
    gap: 1rem;
  }

  .project-title {
    font-size: 1.2rem;
    color: var(--matrix-green);
    font-family: "Courier New", monospace;
    margin: 0;
    flex: 1;
  }

  /* Override default link styles */
  .project-title .project-link {
    color: var(--matrix-green) !important;
    text-decoration: none !important;
    text-shadow: 0 0 5px rgba(0, 255, 65, 0.5);
    transition: all 0.3s ease;
  }

  .project-title .project-link:hover {
    text-shadow: 0 0 10px rgba(0, 255, 65, 0.8);
    text-decoration: none !important;
  }

  .project-status {
    font-size: 0.85rem;
    font-family: "Courier New", monospace;
    font-weight: bold;
    white-space: nowrap;
  }

  .project-description {
    color: rgba(200, 200, 200, 0.85);
    font-family: "Courier New", monospace;
    font-size: 0.95rem;
    line-height: 1.6;
    margin-bottom: 1.5rem;
  }

  /* Style Markdown content in slot */
  .project-description :global(p) {
    margin-bottom: 0.8rem;
  }

  .project-description :global(strong) {
    color: rgba(220, 220, 220, 1);
    font-weight: bold;
  }

  .project-description :global(p:last-child) {
    margin-bottom: 0;
  }

  .project-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .tech-tag {
    background: rgba(0, 255, 65, 0.1);
    color: rgba(0, 255, 65, 0.9);
    padding: 0.3rem 0.8rem;
    border-radius: 4px;
    font-size: 0.8rem;
    font-family: "Courier New", monospace;
    border: 1px solid rgba(0, 255, 65, 0.2);
    transition: all 0.2s ease;
  }

  /* Subtle tag hover */
  .project-card:hover .tech-tag {
    background: rgba(0, 255, 65, 0.15);
    border-color: rgba(0, 255, 65, 0.4);
  }

  @media (max-width: 768px) {
    .project-card {
      padding: 1.2rem;
    }

    /* Reduce hover effect on mobile */
    .project-card:hover {
      transform: translateY(-2px);
    }

    .project-header {
      flex-direction: column;
      gap: 0.5rem;
    }

    .project-title {
      font-size: 1.1rem;
    }

    .project-description {
      font-size: 0.9rem;
    }
  }
</style>
