---
/**
 * Project Card Component
 * @description Single project card
 */

interface Props {
  title: string;
  status: string;
  description: string;
  techTags: string[];
}

const { title, status, description, techTags } = Astro.props;
---

<div class="project-card">
  <div class="project-header">
    <h3>{title}</h3>
    <span class="project-status">{status}</span>
  </div>
  <p>{description}</p>
  <div class="project-tech">
    {techTags.map(tag => (
      <span class="tech-tag">{tag}</span>
    ))}
  </div>
</div>

<style>
  .project-card {
    background: var(--card-bg);
    border: 1px solid var(--border-color);
    padding: 2rem;
    transition: all 0.3s ease;
    position: relative;
  }

  .project-card::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 2px;
    background: var(--matrix-green);
    transform: scaleX(0);
    transition: transform 0.3s ease;
  }

  .project-card:hover {
    border-color: var(--matrix-green);
    transform: translateY(-5px);
  }

  .project-card:hover::before {
    transform: scaleX(1);
  }

  .project-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1rem;
  }

  .project-card h3 {
    font-size: 1.3rem;
    color: var(--matrix-green);
  }

  .project-status {
    font-size: 0.8rem;
    color: var(--text-secondary);
    border: 1px solid var(--border-color);
    padding: 0.25rem 0.75rem;
  }

  .project-card p {
    color: var(--text-secondary);
    margin-bottom: 1.5rem;
    font-size: 0.95rem;
  }

  .project-tech {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .tech-tag {
    font-size: 0.75rem;
    color: var(--matrix-green);
    border: 1px solid var(--matrix-green);
    padding: 0.25rem 0.75rem;
    background: rgba(0, 255, 65, 0.1);
  }
</style>
