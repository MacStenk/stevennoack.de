---
/**
 * Matrix Background Component
 * @description Animated Matrix rain effect background
 */
---

<canvas id="matrix-bg"></canvas>

<style>
  #matrix-bg {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 0;
    opacity: 0.15;
  }
</style>

<script>
  import { MatrixRain } from '@/scripts/matrix-rain.js';
  
  const matrix = new MatrixRain('matrix-bg', {
    chars: 'ABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789@#$%^&*()',
    fontSize: 14
  });
  
  matrix.start(35);
</script>
