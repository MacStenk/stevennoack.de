---
/**
 * Contact Section Component
 * @description Contact links with email bot protection
 */
---

<section id="contact" class="section">
  <h2 class="section-title">connect</h2>

  <div class="contact-grid">
    <div class="contact-item">
      <span class="contact-label">Email:</span>

      <!-- Fallback für NoScript (CSS Reverse) -->
      <noscript>
        <a
          href="mailto:ed.kcaonnevets@nevets"
          class="contact-link email-reverse"
        >
          ed.kcaonnevets@nevets
        </a>
      </noscript>

      <!-- Für normale Browser (JavaScript Obfuscation) -->
      <a href="#" id="email-link" class="contact-link" style="display: none;">
        <span id="email-display"></span>
      </a>
    </div>

    <div class="contact-item">
      <span class="contact-label">GitHub:</span>
      <a
        href="https://github.com/MacStenk"
        target="_blank"
        rel="noopener noreferrer"
        class="contact-link"
      >
        MacStenk
      </a>
    </div>
    <!-- Fallback für NoScript (CSS Reverse) 
    <div class="contact-item">
      <span class="contact-label">LinkedIn:</span>
      <a
        href="https://linkedin.com/in/stevennoack"
        target="_blank"
        rel="noopener noreferrer"
        class="contact-link"
      >
        stevennoack
      </a>
    </div>
-->

    <div class="contact-item">
      <span class="contact-label">X/Twitter:</span>
      <a
        href="https://x.com/stevennoack_de"
        target="_blank"
        rel="noopener noreferrer"
        class="contact-link"
      >
        @stevennoack
      </a>
    </div>
  </div>
</section>

<style>
  .section {
    padding: 4rem 2rem;
    max-width: 900px;
    margin: 0 auto;
  }

  .section-title {
    font-size: 2rem;
    color: var(--matrix-green);
    text-shadow: 0 0 10px rgba(0, 255, 65, 0.5);
    margin-bottom: 2rem;
    font-family: "Courier New", monospace;
  }

  .contact-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 1.5rem;
  }

  .contact-item {
    background: rgba(0, 20, 0, 0.3);
    border: 1px solid rgba(0, 255, 65, 0.3);
    border-radius: 8px;
    padding: 1.5rem;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    transition: all 0.3s ease;
  }

  .contact-item:hover {
    border-color: var(--matrix-green);
    box-shadow: 0 0 20px rgba(0, 255, 65, 0.2);
  }

  .contact-label {
    color: rgba(0, 255, 65, 0.7);
    font-family: "Courier New", monospace;
    font-size: 0.85rem;
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  .contact-link {
    color: var(--matrix-green);
    text-decoration: none;
    font-family: "Courier New", monospace;
    font-size: 1.1rem;
    text-shadow: 0 0 5px rgba(0, 255, 65, 0.5);
    transition: all 0.3s ease;
  }

  .contact-link:hover {
    text-shadow: 0 0 10px rgba(0, 255, 65, 0.8);
  }

  /* E-Mail Schutz - CSS Reverse für NoScript */
  .email-reverse {
    unicode-bidi: bidi-override;
    direction: rtl;
  }

  @media (max-width: 768px) {
    .section {
      padding: 3rem 1.5rem;
    }

    .section-title {
      font-size: 1.5rem;
    }

    .contact-grid {
      grid-template-columns: 1fr;
      gap: 1rem;
    }

    .contact-item {
      padding: 1.2rem;
    }

    .contact-link {
      font-size: 1rem;
    }
  }
</style>

<script>
  // E-Mail verschlüsselt (Base64) - steven@stevennoack.de
  const encoded = "c3RldmVuQHN0ZXZlbm5vYWNrLmRl";
  const email = atob(encoded);

  const link = document.getElementById("email-link");
  const display = document.getElementById("email-display");

  if (link && display) {
    link.href = `mailto:${email}`;
    display.textContent = email;
    link.style.display = "inline";
  }
</script>
