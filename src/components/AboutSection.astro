---
/**
 * About Section Component
 * @description Terminal-style about section with Markdown content
 * Now reads from Content Collection!
 */
import { getEntry } from "astro:content";

// Load about content from Content Collection
const aboutEntry = await getEntry("about", "story");
const { Content } = await aboutEntry.render();
---

<section id="about" class="section">
  <h2 class="section-title">{aboutEntry.data.title}</h2>
  <div class="about-content">
    <div class="terminal-prompt">{aboutEntry.data.prompt}</div>
    <div class="about-text">
      <Content />
    </div>
  </div>
</section>

<style>
  .section {
    padding: 4rem 2rem;
    max-width: 900px;
    margin: 0 auto;
  }

  .section-title {
    font-size: 2rem;
    color: var(--matrix-green);
    text-shadow: 0 0 10px rgba(0, 255, 65, 0.5);
    margin-bottom: 2rem;
    font-family: "Courier New", monospace;
  }

  .about-content {
    background: rgba(0, 20, 0, 0.3);
    border: 1px solid rgba(0, 255, 65, 0.3);
    border-radius: 8px;
    padding: 2rem;
  }

  .terminal-prompt {
    color: var(--matrix-green);
    font-family: "Courier New", monospace;
    font-size: 1.2rem;
    margin-bottom: 1.5rem;
    text-shadow: 0 0 5px rgba(0, 255, 65, 0.5);
  }

  .terminal-prompt::before {
    content: "$ ";
    color: rgba(0, 255, 65, 0.7);
  }

  .about-text {
    color: rgba(0, 255, 65, 0.9);
    font-family: "Courier New", monospace;
    line-height: 1.8;
    font-size: 1rem;
    white-space: pre-line;
  }

  /* Style Markdown content */
  .about-text :global(p) {
    margin-bottom: 1.2rem;
  }

  .about-text :global(strong) {
    color: var(--matrix-green);
    font-weight: bold;
  }

  .about-text :global(code) {
    background: rgba(0, 255, 65, 0.1);
    padding: 0.2rem 0.4rem;
    border-radius: 3px;
    font-size: 0.9em;
  }
  /* Code Blocks - WENIGER Abstand nach unten */
  .about-text :global(pre) {
    background: rgba(0, 0, 0, 0.5);
    padding: 1rem;
    border-radius: 5px;
    overflow-x: auto;
    margin: 1rem 0 0.5rem 0; /* ← Nur 0.5rem nach unten statt 1rem */
  }

  .about-text :global(pre code) {
    background: none;
    padding: 0;
  }

  /* Blockquote - WENIGER Abstand nach oben */
  .about-text :global(blockquote) {
    border-left: 3px solid var(--matrix-green);
    padding: 0.5rem 0 0.5rem 1rem;
    margin: 0.5rem 0 2rem 0;
    font-style: italic;
    opacity: 0.9;
    display: table; /* ← NEU! Macht Element nur so groß wie Inhalt */
    width: auto; /* ← NEU! Keine volle Breite */
  }
  @media (max-width: 768px) {
    .section {
      padding: 3rem 1.5rem;
    }

    .section-title {
      font-size: 1.5rem;
    }

    .about-content {
      padding: 1.5rem;
    }

    .about-text {
      font-size: 0.9rem;
    }
  }
</style>
