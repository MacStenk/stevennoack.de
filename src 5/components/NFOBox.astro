---
/**
 * NFO Box Component
 * @description ASCII Art box with typewriter effect
 */

interface Props {
  content: string;
  speed?: number;
  delay?: number;
}

const { content, speed = 10, delay = 300 } = Astro.props;
---

<div class="nfo-container">
  <div class="crt-screen">
    <div class="nfo-box" id="nfo-content"></div>
  </div>
</div>

<style>
  .nfo-container {
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 2rem 0;
  }
  
  .crt-screen {
    position: relative;
    background: rgba(0, 0, 0, 0.8);
    border: 2px solid var(--matrix-green);
    border-radius: 8px;
    padding: 2rem;
    box-shadow: 
      0 0 20px rgba(0, 255, 65, 0.3),
      inset 0 0 20px rgba(0, 255, 65, 0.1);
  }
  
  .nfo-box {
    font-family: var(--font-mono);
    font-size: 0.85rem;
    line-height: 1.2;
    color: var(--matrix-green);
    white-space: pre;
    text-shadow: 0 0 5px rgba(0, 255, 65, 0.5);
    min-height: 400px;
  }
  
  @media (max-width: 768px) {
    .crt-screen {
      padding: 1rem;
    }
    
    .nfo-box {
      font-size: 0.6rem;
      min-height: 300px;
    }
  }
  
  @media (max-width: 480px) {
    .nfo-box {
      font-size: 0.5rem;
      min-height: 250px;
    }
  }
</style>

<script define:vars={{ content, speed, delay }}>
  import { Typewriter } from '@/scripts/typewriter.js';
  
  const typewriter = new Typewriter('nfo-content', content, {
    speed: speed,
    delay: delay
  });
  
  typewriter.start();
</script>
