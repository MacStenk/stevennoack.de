---
/**
 * Footer Component
 * @description Site footer with links and copyright
 */

const currentYear = new Date().getFullYear();
---

<footer class="site-footer">
  <div class="container">
    <div class="footer-content">
      <div class="footer-section">
        <h3 class="footer-title">Steven Noack</h3>
        <p class="footer-tagline">
          Tech Pioneer · Berlin Underground · Building the Future
        </p>
      </div>
      
      <div class="footer-section">
        <h4 class="footer-heading">Projects</h4>
        <ul class="footer-links">
          <li><a href="https://privacy-ai-os.de" target="_blank">Privacy AI OS</a></li>
          <li><a href="https://codeback.de" target="_blank">CodeBack</a></li>
          <li><a href="https://visionfusen.com" target="_blank">VisionFusen</a></li>
          <li><a href="https://quantenbeatz.de" target="_blank">QuantenBeatz</a></li>
        </ul>
      </div>
      
      <div class="footer-section">
        <h4 class="footer-heading">Connect</h4>
        <ul class="footer-links">
          <li><a href="mailto:steven@stevennoack.de">Email</a></li>
          <li><a href="https://github.com/stevennoack" target="_blank">GitHub</a></li>
          <li><a href="https://linkedin.com/in/stevennoack" target="_blank">LinkedIn</a></li>
          <li><a href="#contact">Get in Touch</a></li>
        </ul>
      </div>
      
      <div class="footer-section">
        <h4 class="footer-heading">Philosophy</h4>
        <p class="footer-text">
          Privacy First, Always<br>
          Self-Hosted with Pride<br>
          No Guru BS
        </p>
      </div>
    </div>
    
    <div class="footer-bottom">
      <div class="copyright">
        <p>
          © {currentYear} Steven Noack · Built with 
          <span class="highlight">Astro</span> + 
          <span class="highlight">Matrix Vibes</span>
        </p>
      </div>
      
      <div class="footer-meta">
        <a href="/impressum">Impressum</a>
        <span class="separator">|</span>
        <a href="/datenschutz">Datenschutz</a>
        <span class="separator">|</span>
        <a href="#hero" class="back-to-top">Back to Top ↑</a>
      </div>
    </div>
  </div>
</footer>

<style>
  .site-footer {
    background: rgba(0, 0, 0, 0.95);
    border-top: 2px solid var(--matrix-green);
    padding: 4rem 2rem 2rem;
    position: relative;
  }
  
  .site-footer::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 2px;
    background: linear-gradient(
      90deg,
      var(--matrix-green) 0%,
      var(--neon-green) 50%,
      var(--matrix-green) 100%
    );
    animation: pulse 3s ease-in-out infinite;
  }
  
  @keyframes pulse {
    0%, 100% { opacity: 0.5; }
    50% { opacity: 1; }
  }
  
  .container {
    max-width: 1200px;
    margin: 0 auto;
  }
  
  .footer-content {
    display: grid;
    grid-template-columns: 2fr 1fr 1fr 1fr;
    gap: 3rem;
    margin-bottom: 3rem;
  }
  
  .footer-section {
    color: var(--matrix-glow);
  }
  
  .footer-title {
    font-size: 1.5rem;
    color: var(--matrix-green);
    font-family: var(--font-mono);
    margin-bottom: 0.5rem;
    text-shadow: 0 0 10px rgba(0, 255, 65, 0.5);
  }
  
  .footer-tagline {
    font-family: var(--font-mono);
    font-size: 0.9rem;
    line-height: 1.6;
  }
  
  .footer-heading {
    color: var(--matrix-green);
    font-family: var(--font-mono);
    font-size: 1rem;
    margin-bottom: 1rem;
    letter-spacing: 0.1em;
  }
  
  .footer-links {
    list-style: none;
    padding: 0;
    margin: 0;
  }
  
  .footer-links li {
    margin-bottom: 0.5rem;
  }
  
  .footer-links a {
    color: var(--matrix-glow);
    text-decoration: none;
    font-family: var(--font-mono);
    font-size: 0.9rem;
    transition: all 0.3s ease;
    display: inline-block;
  }
  
  .footer-links a:hover {
    color: var(--matrix-green);
    transform: translateX(5px);
  }
  
  .footer-text {
    font-family: var(--font-mono);
    font-size: 0.9rem;
    line-height: 1.8;
  }
  
  .footer-bottom {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: 2rem;
    border-top: 1px solid rgba(0, 255, 65, 0.2);
    flex-wrap: wrap;
    gap: 1rem;
  }
  
  .copyright {
    color: var(--matrix-glow);
    font-family: var(--font-mono);
    font-size: 0.85rem;
  }
  
  .highlight {
    color: var(--matrix-green);
    font-weight: 600;
  }
  
  .footer-meta {
    display: flex;
    gap: 1rem;
    align-items: center;
    font-family: var(--font-mono);
    font-size: 0.85rem;
  }
  
  .footer-meta a {
    color: var(--matrix-glow);
    text-decoration: none;
    transition: color 0.3s ease;
  }
  
  .footer-meta a:hover {
    color: var(--matrix-green);
  }
  
  .separator {
    color: var(--matrix-green);
  }
  
  .back-to-top {
    cursor: pointer;
  }
  
  @media (max-width: 1024px) {
    .footer-content {
      grid-template-columns: repeat(2, 1fr);
      gap: 2rem;
    }
  }
  
  @media (max-width: 768px) {
    .site-footer {
      padding: 3rem 1rem 1.5rem;
    }
    
    .footer-content {
      grid-template-columns: 1fr;
      gap: 2rem;
    }
    
    .footer-bottom {
      flex-direction: column;
      text-align: center;
    }
    
    .footer-meta {
      flex-wrap: wrap;
      justify-content: center;
    }
  }
</style>
