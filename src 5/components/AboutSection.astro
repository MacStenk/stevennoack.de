---
/**
 * About Section Component
 * @description Personal story and background
 */

import { aboutContent } from '@/data/about-content.js';
---

<section id="about" class="about-section">
  <div class="container">
    <div class="section-header">
      <h2 class="section-title">
        <span class="bracket">[</span>
        <span class="title-text">{aboutContent.title.toUpperCase()}</span>
        <span class="bracket">]</span>
      </h2>
      <p class="section-subtitle">{aboutContent.tagline}</p>
    </div>
    
    <div class="about-content">
      <div class="story">
        {aboutContent.paragraphs.map(paragraph => (
          <p class="story-paragraph">{paragraph}</p>
        ))}
      </div>
      
      <div class="stats-grid">
        {aboutContent.stats.map(stat => (
          <div class="stat-card">
            <div class="stat-value">{stat.value}</div>
            <div class="stat-label">{stat.label}</div>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>

<style>
  .about-section {
    padding: 6rem 2rem;
    background: rgba(0, 0, 0, 0.8);
    position: relative;
  }
  
  .about-section::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: linear-gradient(
      90deg,
      transparent 0%,
      var(--matrix-green) 50%,
      transparent 100%
    );
  }
  
  .container {
    max-width: 1200px;
    margin: 0 auto;
  }
  
  .section-header {
    text-align: center;
    margin-bottom: 4rem;
  }
  
  .section-title {
    font-size: 3rem;
    margin: 0 0 1rem 0;
    font-family: var(--font-mono);
    color: var(--matrix-green);
    text-shadow: 0 0 20px rgba(0, 255, 65, 0.5);
  }
  
  .bracket {
    color: var(--cyber-orange);
    font-weight: 700;
  }
  
  .title-text {
    letter-spacing: 0.2em;
  }
  
  .section-subtitle {
    color: var(--matrix-glow);
    font-size: 1.2rem;
    font-family: var(--font-mono);
  }
  
  .about-content {
    display: grid;
    gap: 3rem;
  }
  
  .story {
    max-width: 800px;
    margin: 0 auto;
  }
  
  .story-paragraph {
    font-size: 1.1rem;
    line-height: 1.8;
    color: var(--matrix-glow);
    margin-bottom: 1.5rem;
    text-align: justify;
  }
  
  .story-paragraph:last-child {
    margin-bottom: 0;
  }
  
  .stats-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 2rem;
    margin-top: 3rem;
  }
  
  .stat-card {
    background: rgba(0, 0, 0, 0.7);
    border: 1px solid var(--matrix-green);
    border-radius: 8px;
    padding: 2rem;
    text-align: center;
    transition: all 0.3s ease;
  }
  
  .stat-card:hover {
    transform: translateY(-5px);
    border-color: var(--neon-green);
    box-shadow: 0 10px 30px rgba(0, 255, 65, 0.2);
  }
  
  .stat-value {
    font-size: 3rem;
    font-family: var(--font-mono);
    color: var(--matrix-green);
    font-weight: 700;
    margin-bottom: 0.5rem;
    text-shadow: 0 0 10px rgba(0, 255, 65, 0.5);
  }
  
  .stat-label {
    font-size: 0.9rem;
    font-family: var(--font-mono);
    color: var(--matrix-glow);
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }
  
  @media (max-width: 768px) {
    .about-section {
      padding: 4rem 1rem;
    }
    
    .section-title {
      font-size: 2rem;
    }
    
    .story-paragraph {
      font-size: 1rem;
      text-align: left;
    }
    
    .stats-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 1rem;
    }
    
    .stat-card {
      padding: 1.5rem;
    }
    
    .stat-value {
      font-size: 2rem;
    }
  }
</style>
