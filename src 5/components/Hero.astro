---
/**
 * Hero Section Component
 * @description Main hero section with NFO box
 */

import NFOBox from './NFOBox.astro';
import { nfoContentEN } from '@/data/nfo-content.js';
---

<section id="hero" class="hero-section">
  <div class="hero-content">
    <NFOBox content={nfoContentEN} speed={10} delay={300} />
    
    <div class="hero-text">
      <h1 class="hero-title">
        <span class="bracket">[</span>
        <span class="title-main">STEVEN NOACK</span>
        <span class="bracket">]</span>
      </h1>
      
      <p class="hero-subtitle">
        Tech Pioneer · Berlin Underground · Building Self-Hosted AI Infrastructure
      </p>
      
      <div class="hero-cta">
        <a href="#projects" class="btn btn-primary">
          <span>Explore Projects</span>
          <span class="arrow">→</span>
        </a>
        <a href="#contact" class="btn btn-secondary">
          <span>Get in Touch</span>
          <span class="arrow">→</span>
        </a>
      </div>
    </div>
  </div>
</section>

<style>
  .hero-section {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 4rem 2rem;
    position: relative;
  }
  
  .hero-content {
    max-width: 1200px;
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 3rem;
  }
  
  .hero-text {
    text-align: center;
    max-width: 800px;
  }
  
  .hero-title {
    font-size: 3.5rem;
    margin-bottom: 1rem;
    font-family: var(--font-mono);
    animation: glow 3s ease-in-out infinite;
  }
  
  .bracket {
    color: var(--cyber-orange);
    font-weight: 700;
  }
  
  .title-main {
    color: var(--matrix-green);
    letter-spacing: 0.2em;
  }
  
  .hero-subtitle {
    font-size: 1.3rem;
    color: var(--matrix-glow);
    margin-bottom: 2rem;
    font-family: var(--font-mono);
    line-height: 1.6;
  }
  
  .hero-cta {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }
  
  .btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 1rem 2rem;
    font-family: var(--font-mono);
    font-weight: 700;
    text-decoration: none;
    border-radius: 6px;
    transition: all 0.3s ease;
    font-size: 1rem;
    letter-spacing: 0.05em;
  }
  
  .btn-primary {
    background: var(--matrix-green);
    color: #000;
    border: 2px solid var(--matrix-green);
  }
  
  .btn-primary:hover {
    background: transparent;
    color: var(--matrix-green);
    transform: translateY(-2px);
    box-shadow: 0 5px 20px rgba(0, 255, 65, 0.3);
  }
  
  .btn-secondary {
    background: transparent;
    color: var(--cyber-orange);
    border: 2px solid var(--cyber-orange);
  }
  
  .btn-secondary:hover {
    background: var(--cyber-orange);
    color: #000;
    transform: translateY(-2px);
    box-shadow: 0 5px 20px rgba(255, 136, 0, 0.3);
  }
  
  .arrow {
    transition: transform 0.3s ease;
  }
  
  .btn:hover .arrow {
    transform: translateX(5px);
  }
  
  @media (max-width: 768px) {
    .hero-section {
      padding: 3rem 1rem;
      min-height: auto;
    }
    
    .hero-title {
      font-size: 2rem;
    }
    
    .hero-subtitle {
      font-size: 1rem;
    }
    
    .hero-cta {
      flex-direction: column;
      width: 100%;
    }
    
    .btn {
      width: 100%;
      justify-content: center;
    }
  }
</style>
