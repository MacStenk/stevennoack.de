<style>
  .contact-section {
    padding: 6rem 2rem;
    background: rgba(0, 0, 0, 0.9);
    position: relative;
  }
  
  .contact-section::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 2px;
    background: linear-gradient(
      90deg,
      transparent 0%,
      var(--matrix-green) 50%,
      transparent 100%
    );
  }
  
  .container {
    max-width: 1200px;
    margin: 0 auto;
  }
  
  .contact-header {
    text-align: center;
    margin-bottom: 4rem;
  }
  
  .section-title {
    font-size: 3rem;
    margin: 0 0 1rem 0;
    font-family: var(--font-mono);
    color: var(--matrix-green);
    text-shadow: 0 0 20px rgba(0, 255, 65, 0.5);
  }
  
  .bracket {
    color: var(--cyber-orange);
    font-weight: 700;
  }
  
  .title-text {
    letter-spacing: 0.2em;
  }
  
  .contact-subtitle {
    color: var(--matrix-glow);
    font-size: 1.2rem;
    font-family: var(--font-mono);
  }
  
  .contact-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    margin-bottom: 4rem;
  }
  
  .contact-card {
    background: rgba(0, 0, 0, 0.7);
    border: 1px solid var(--matrix-green);
    border-radius: 8px;
    padding: 2rem;
    text-align: center;
    transition: all 0.3s ease;
  }
  
  .contact-card:hover {
    transform: translateY(-5px);
    border-color: var(--neon-green);
    box-shadow: 0 10px 30px rgba(0, 255, 65, 0.2);
  }
  
  .card-icon {
    font-size: 3rem;
    margin-bottom: 1rem;
  }
  
  .contact-card h3 {
    color: var(--matrix-green);
    font-family: var(--font-mono);
    margin-bottom: 1rem;
  }
  
  .contact-card p {
    color: var(--matrix-glow);
    margin-bottom: 1rem;
    line-height: 1.6;
  }
  
  .contact-link {
    display: inline-block;
    color: var(--matrix-green);
    text-decoration: none;
    font-family: var(--font-mono);
    font-weight: 600;
    padding: 0.5rem 1rem;
    border: 1px solid var(--matrix-green);
    border-radius: 4px;
    transition: all 0.3s ease;
  }
  
  .contact-link:hover {
    background: var(--matrix-green);
    color: #000;
    transform: scale(1.05);
  }
  
  .cta-box {
    background: linear-gradient(
      135deg,
      rgba(0, 255, 65, 0.1) 0%,
      rgba(0, 0, 0, 0.8) 100%
    );
    border: 2px solid var(--matrix-green);
    border-radius: 12px;
    padding: 3rem;
    text-align: center;
    position: relative;
    overflow: hidden;
  }
  
  .cta-box::before {
    content: '';
    position: absolute;
    top: -50%;
    left: -50%;
    width: 200%;
    height: 200%;
    background: repeating-linear-gradient(
      45deg,
      transparent,
      transparent 10px,
      rgba(0, 255, 65, 0.05) 10px,
      rgba(0, 255, 65, 0.05) 20px
    );
    animation: scan 20s linear infinite;
  }
  
  @keyframes scan {
    from { transform: translate(0, 0); }
    to { transform: translate(50%, 50%); }
  }
  
  .cta-content {
    position: relative;
    z-index: 1;
  }
  
  .cta-title {
    font-size: 2rem;
    color: var(--matrix-green);
    font-family: var(--font-mono);
    margin-bottom: 1rem;
    text-shadow: 0 0 20px rgba(0, 255, 65, 0.5);
  }
  
  .cta-text {
    color: var(--matrix-glow);
    font-size: 1.1rem;
    margin-bottom: 2rem;
  }
  
  .cta-buttons {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }
  
  .btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 1rem 2rem;
    font-family: var(--font-mono);
    font-weight: 700;
    text-decoration: none;
    border-radius: 6px;
    transition: all 0.3s ease;
    font-size: 1rem;
    letter-spacing: 0.05em;
  }
  
  .btn-primary {
    background: var(--matrix-green);
    color: #000;
    border: 2px solid var(--matrix-green);
  }
  
  .btn-primary:hover {
    background: transparent;
    color: var(--matrix-green);
    transform: translateY(-2px);
    box-shadow: 0 5px 20px rgba(0, 255, 65, 0.3);
  }
  
  .btn-secondary {
    background: transparent;
    color: var(--cyber-orange);
    border: 2px solid var(--cyber-orange);
  }
  
  .btn-secondary:hover {
    background: var(--cyber-orange);
    color: #000;
    transform: translateY(-2px);
    box-shadow: 0 5px 20px rgba(255, 136, 0, 0.3);
  }
  
  .arrow {
    transition: transform 0.3s ease;
  }
  
  .btn:hover .arrow {
    transform: translateX(5px);
  }
  
  @media (max-width: 768px) {
    .contact-section {
      padding: 4rem 1rem;
    }
    
    .section-title {
      font-size: 2rem;
    }
    
    .contact-grid {
      grid-template-columns: 1fr;
    }
    
    .cta-box {
      padding: 2rem;
    }
    
    .cta-title {
      font-size: 1.5rem;
    }
    
    .cta-buttons {
      flex-direction: column;
    }
    
    .btn {
      width: 100%;
      justify-content: center;
    }
  }
</style>
